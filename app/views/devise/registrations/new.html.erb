
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <div class="text-center">
        <% if params[:plan]=='2' %>
          <h1 class="clr">Pro Account</h1>
          <p>Sign up for the pro account for Rs.100/month and get access to the community and contact information!</p>
        <% else %>
          <h1 class="clr">Basic Account</h1>
          <p>Sign up for free and get access to the community.</p>
        <% end %>
      </div>
      
      <div class="well">
        <h3>Sign up</h3>
        <% if params[:plan]=='2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </div>
</div>